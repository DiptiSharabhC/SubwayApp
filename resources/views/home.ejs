<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
             <img src="/img/subwaylogo.png" height=200 width=200 alt="">
            <h6 class="text-lg" color='#267a17'><em>Beat your hunger</br>order Subway sandwiches!!!!</h1>
          </em></h6>

        </div>
        <div class="w-1/2">
            <img src="/img/subwayimage.png" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Sandwiches</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% sandwiches.forEach(function(sandwich) { %>
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= sandwich.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= sandwich.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= sandwich.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= sandwich.price %></span>
                    <button data-sandwich="<%= JSON.stringify(sandwich) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4" >Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>